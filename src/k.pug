doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='description' content='KranCorp verdichtet')
    meta(name='keywords' content='kran,kranplatz,corp,cooperation,software,agile,excel,dynamic,startup,slack,html5')
    meta(name='author' content='KranCorp')

    meta(name='viewport' content='width=device-width, initial-scale=1')

    title KranCorp
    
    include include/_favicons.pug
    style.
      * {
        margin: 0;
        padding: 0;
      }

      html,
      body {
        height: 100vh;
      }

      body {
        display: flex;
        flex-direction: column;
      }

      header {
        background: #000;
        height: 100vh;
        position: relative;
      }

      #header-background,
      .header-logo {
        position: absolute;
        top: 0;
        height: 100%;
        width: 100%;
        overflow: hidden;
      }

      .header-logo {
        display: flex;
      }
      
      .header-logo .logo {
        margin: auto;
        width: 225px;
      }

      .flex-grow {
        flex-grow: 1;
      }

  body
    header
      header
      #header-background
      .header-logo
        .flex-grow
        img.logo(src='assets/img/k.svg')
        .flex-grow

    script(src='assets/libs/jquery.min.js')
    script(src='assets/libs/two.min.js')
    script(src='assets/js/krancorp.js')